#!/usr/bin/env bash

# Installs Spigot, if necessary
function bootstrap {
    echo "0"
    exit 0
}

case $1 in

    "start")
        install_status = $(/bin/bash /usr/local/spigot/spigot_version.sh)

        if [ "$(bootstrap)" = "0" ]
        then
            numseconds=$(/bin/bash /usr/local/spigot/spigot_start.sh)
            wait
            sleep "$numseconds"
            exit $?
        fi
    ;;

    "stop")
        echo "Stop"
    ;;

    *)
        echo "Unrecognized command"
    ;;
esac

exit 0
